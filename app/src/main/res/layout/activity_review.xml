<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us your feeling"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="Roboto-Black"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charging \nStation"
        android:textSize="20sp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test charging station"
        android:textSize="20sp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="160dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/review_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test station address"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="160dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Rate"
        android:textSize="20sp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"/>

    <RatingBar
        android:id="@+id/overall_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="135dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service"
        android:textSize="20sp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="20dp"/>

    <RatingBar
        android:id="@+id/service_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="135dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanness"
        android:textSize="20sp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="20dp"/>

    <RatingBar
        android:id="@+id/cleanness_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="135dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="20sp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="20dp"/>

    <RatingBar
        android:id="@+id/price_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="135dp"/>

    <Button
        android:id="@+id/button_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>